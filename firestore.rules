rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /files/{fileId} {
      // Allow create if auth matches ownerId
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
      
      // Allow read if public OR if owner
      // We check isPublic first to allow unauthenticated access to public files
      allow read: if (resource.data.isPublic == true) || (request.auth != null && resource.data.ownerId == request.auth.uid);
      
      // Allow update/delete only if owner
      allow update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }
  }
}
